---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import ImageGallery from '../components/ImageGallery.astro';
import BackToTop from './BackToTop.astro';

const allTalksEntries = await getCollection('talk');
const allTalksList = allTalksEntries
  .flatMap(entry => entry.data)
  .filter(item => !item.draft)
  .sort((a, b) => new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime());

function formatDate(date: Date | string) {
  const d = new Date(date);
  const currentYear = new Date().getFullYear();
  return d.getFullYear() === currentYear 
    ? `${(d.getMonth() + 1).toString().padStart(2, '0')}-${d.getDate().toString().padStart(2, '0')}`
    : `${d.getFullYear()}-${(d.getMonth() + 1).toString().padStart(2, '0')}-${d.getDate().toString().padStart(2, '0')}`;
}
---

<ImageGallery selector=".talk-image-box" />

<div class="talk-list">
  <div class="talks-grid">
    {allTalksList.map((talk, idx) => (
      <div class="talk-item slide-enter" style={`--enter-stage: ${idx + 1}; --enter-step: 100ms;`}>
        <div class="talk-container">
          <div class="talk-top-row">
            <span class="talk-title">{talk.title}</span>
            <span class="talk-date">{formatDate(talk.publishDate)}</span>
          </div>

          <div class="talk-image-box is-square">
            <Image 
              src={talk.cover} 
              alt={talk.title} 
              width={1000} 
              height={1250}
              class="talk-img"
            />
          </div>

          {talk.excerpt && (
            <div class="talk-bottom-row">
              <p class="talk-excerpt">{talk.excerpt}</p>
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<BackToTop>
  <div class="divider"></div>
  <button id="float-ratio-toggle" class="control-btn" title="切换视图比例">
    <div class="i-ri:layout-grid-line"></div>
  </button>
</BackToTop>

<script>
  function initTalkToggle() {
    const btnFloat = document.getElementById('float-ratio-toggle');
    const boxes = document.querySelectorAll('.talk-image-box');
    
    if (!boxes.length) return;

    const performToggle = () => {
      boxes.forEach(box => {
        box.classList.toggle('is-square');
      });
    };

    btnFloat?.addEventListener('click', performToggle);
  }

  document.addEventListener('astro:page-load', initTalkToggle);
  initTalkToggle();
</script>

<style>
  /* --- 自动填充大图布局 --- */
  .talk-list {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    padding: 0 1.5rem; 
    box-sizing: border-box;
    padding-top: 2rem; /* 补偿删除 header 后的顶部间距 */
  }

  .talks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem 1.2rem;
  }

  @media (max-width: 360px) {
    .talks-grid {
      grid-template-columns: 1fr;
    }
  }

  /* --- 卡片内容 --- */
  .talk-container { 
    display: flex;
    flex-direction: column; 
    width: 100%; 
  }
  
  .talk-top-row { 
    display: flex; 
    justify-content: space-between; 
    align-items: baseline;
    margin-bottom: 0.5rem; 
  }

  .talk-title { 
    font-size: 0.8rem; 
    opacity: 0.4; 
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right: 8px;
  }
  .talk-date { 
    font-size: 0.7rem; 
    font-family: monospace; 
    opacity: 0.25; 
    flex-shrink: 0;
  }

  .talk-image-box {
    width: 100%;
    overflow: hidden;
    background-color: transparent;
    cursor: zoom-in;
    transition: aspect-ratio 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .is-square { aspect-ratio: 1 / 1; }
  .talk-image-box:not(.is-square) { aspect-ratio: 3 / 4.2; }

  .talk-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .talk-bottom-row { margin-top: 0.8rem; }
  .talk-excerpt { 
    font-size: 0.95rem; 
    line-height: 1.6; 
    opacity: 0.7;
    text-align: left; 
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* 入场动画 */
  .slide-enter {
    animation: slide-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both;
    animation-delay: calc(var(--enter-stage) * 40ms);
  }
  @keyframes slide-up {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>