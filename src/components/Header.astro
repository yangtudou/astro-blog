---
import Logo from '../components/Logo.astro'
---

<header class="header-fixed">
  <a href="/" class="logo-link" aria-label="Home">
    <Logo />
  </a>
</header>

<style>
  .header-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    pointer-events: none;
  }

  .logo-link {
    display: block;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 1.75rem;
    opacity: 0.6;
    transition: all 0.4s ease;
    pointer-events: auto;
  }

  .logo-link:hover {
    opacity: 1;
    transform: translateX(-50%) scale(1.1);
  }
</style>