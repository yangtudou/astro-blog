<script>
  function initLiquidLayout() {
    const island = document.getElementById('main-island');
    const triggerContainer = document.getElementById('trigger-container');
    const expandBtn = document.getElementById('expand-trigger');
    const menuItems = document.querySelectorAll('.menu-item');
    if (!island || !expandBtn || !triggerContainer) return;

    let isExpanded = false;
    const toggleMenu = (expand: boolean) => {
      isExpanded = expand;
      island.classList.toggle('is-expanded', expand);
      triggerContainer.style.opacity = expand ? '0' : '1';
      triggerContainer.style.transform = expand ? 'scale(0.6) translateY(10px)' : 'scale(1) translateY(0)';
      triggerContainer.style.pointerEvents = expand ? 'none' : 'auto';
      menuItems.forEach((item, index) => {
        (item as HTMLElement).style.transitionDelay = expand ? `${index * 50 + 120}ms` : '0ms';
      });
    };

    expandBtn.onclick = (e) => { e.stopPropagation(); toggleMenu(true); };
    document.addEventListener('click', (e) => {
      if (isExpanded && !island.contains(e.target as Node)) toggleMenu(false);
    });
    window.addEventListener('scroll', () => { if (isExpanded) toggleMenu(false); }, { passive: true });
  }

  document.addEventListener('astro:page-load', initLiquidLayout);
  initLiquidLayout();
</script>

<style>
  :root {
    --spring-ease: cubic-bezier(0.5, 1.7, 0.3, 0.8);
    --btn-size: 44px;
    --glass-bg: rgba(255, 255, 255, 0.25);
    --glass-border: rgba(255, 255, 255, 0.4);
    --text-color: #1d1d1f;
  }

