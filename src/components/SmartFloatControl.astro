    overflow: hidden;
    /* ğŸ”‘ å…³é”®ä¿®æ”¹ï¼šå›ºå®šå˜æ¢åŸç‚¹åœ¨å·¦ä¸‹è§’ï¼Œç¡®ä¿å‘ä¸Šå¼¹å¼€ */
    transform-origin: bottom left; 
  }

  .buttons-capsule.is-expanded {
    width: 140px;
    height: auto;
    border-radius: 20px;
    transform: translateY(-5px);
  }

  .expand-wrapper {
    display: grid;
